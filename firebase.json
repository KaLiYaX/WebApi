{
  "functions": {
    "source": ".",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "src",
      "styles.css",
      "*.html",
      "*.md",
      ".env*"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions",
      "index.js"
    ],
    "rewrites": [
      {
        "source": "/api/v1/youtube/search",
        "function": "ytSearch"
      },
      {
        "source": "/api/v1/youtube/mp3",
        "function": "ytmp3"
      },
      {
        "source": "/api/v1/youtube/mp4",
        "function": "ytmp4"
      },
      {
        "source": "/api/v1/youtube/transcript",
        "function": "ytTranscript"
      },
      {
        "source": "/api/v1/youtube/playmp3",
        "function": "playmp3"
      },
      {
        "source": "/api/v1/youtube/playmp4",
        "function": "playmp4"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
